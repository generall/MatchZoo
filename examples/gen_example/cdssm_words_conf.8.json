{
  "net_name": "cdssm",
  "global":{
      "model_type": "PY",
      "weights_file": "examples/gen_example/variant_8/weights/cdssm_words_classify.weights",
      "save_weights_iters": 10,
      "num_iters": 400,
      "display_interval": 10,
      "test_weights_iters": 400,
      "optimizer": "adam",
      "learning_rate": 0.0001
  },
  "inputs": {
    "share": {
        "text1_corpus": "./data/gen_example/variant_8/corpus_preprocessed.txt",
        "text2_corpus": "./data/gen_example/variant_8/corpus_preprocessed.txt",
        "use_dpool": false,
        "embed_size": 50,
        "vocab_size": 657,
        "train_embed": true,
        "target_mode": "classification",
        "class_num": 2,
        "text1_maxlen": 7,
        "text2_maxlen": 7
    },
    "train": {
        "input_type": "PointGenerator", 
        "dtype": "cdssm",
        "phase": "TRAIN",
        "use_iter": false,
        "query_per_iter": 100,
        "batch_per_iter": 5,
        "batch_size": 1024,
        "relation_file": "./data/gen_example/variant_8/relation_train.txt"
    },
    "valid": {
        "input_type": "PointGenerator", 
        "dtype": "cdssm",
        "phase": "EVAL",
        "batch_size": 10,
        "relation_file": "./data/gen_example/variant_8/relation_valid.txt"
    },
    "test": {
        "input_type": "PointGenerator", 
        "dtype": "cdssm",
        "phase": "EVAL",
        "batch_size": 10,
        "relation_file": "./data/gen_example/variant_8/relation_test.txt"
    },
    "predict": {
        "input_type": "PointGenerator", 
        "dtype": "cdssm",
        "phase": "PREDICT",
        "batch_size": 10,
        "relation_file": "./data/gen_example/variant_8/relation_test.txt"
    }
  },
  "outputs": {
    "predict": {
      "save_format": "TREC",
        "batch_size": 10,
      "save_path": "predict.test.cdssm_word_classify.txt"
    }
  },
  "model": {
    "model_path": "matchzoo/models/",
    "model_py": "cdssm.CDSSM",
    "setting": {
        "kernel_count": 64,
        "kernel_size": 3,
        "hidden_sizes": [50],
        "dropout_rate": 0.3
    }
  },
  "losses": [
    {
       "object_name": "categorical_crossentropy",
       "object_params": {}
    }
  ],
  "metrics": [ "accuracy" ]
}

